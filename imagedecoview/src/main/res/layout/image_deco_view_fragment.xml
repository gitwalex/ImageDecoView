<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gerwalex.imagedecoview.ImageDecoView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:arcColor="@android:color/holo_red_dark"
        app:dv_image="@drawable/fireplace"
        app:dv_lineWidth="10dp"
        app:dv_text="@string/app_name"
        app:dv_textBackground="@android:color/holo_blue_light"
        app:dv_textColor="@android:color/white"
        app:fullArc="true" />

</LinearLayout>